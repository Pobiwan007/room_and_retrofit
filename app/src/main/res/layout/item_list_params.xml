<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_constraints"
    android:layout_margin="10dp"
    android:elevation="10dp">
    <TextView
        android:id="@+id/name_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="start"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/games"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/value_param"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/name_param"
        app:layout_constraintBottom_toBottomOf="@id/name_param"
        app:layout_constraintEnd_toEndOf="@id/name_param"
        app:layout_constraintWidth_percent=".3"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_teams_item"
        android:gravity="center"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>